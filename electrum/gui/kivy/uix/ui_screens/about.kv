#:import VERSION electrum.version.APK_VERSION

Popup:
    title: _("About Chesscoin")
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Version')
                size_hint_x: 0.4
            TopLabel:
                text: VERSION
                size_hint_x: 0.6
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "MIT/X11 Software Licence"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=6666ff][ref=x]https://chesscoin032.com[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://chesscoin032.com/")
                size_hint_x: 0.6
        TopLabel:
            text: _('Welcome to ChessCoin 0.32%\n')
            font_size: '20dp'
            padding: '0dp', '10dp'
        TopLabel:
            text: _('ChessCoin 0.32% is simple, pratical and pragmatic...\nTransactions fee 0.0001 Chess / unlimited ChessCoin....')
            padding: '0dp', '3dp'
        Widget:
            size_hint: None, 0.6
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Widget:
                size_hint: 0.5, None
                height: '48dp'
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('Close')
                on_release: root.dismiss()
